# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

GET     /                           controllers.HomeController.index()


GET     /login                      controllers.HomeController.displayLogin()

# This one works....
+ nocsrf
POST    /login                      controllers.HomeController.loginAction()

# But this one doesn't, and I can't figure out why the one from the example I posted works.
+ nocsrf
POST    /loginAction                      controllers.HomeController.loginAction()

+ nocsrf
POST    /createUser                 controllers.HomeController.createUser()

+ nocsrf
GET     /item                       controllers.ItemController.index()

+ nocsrf
POST    /addItem                    controllers.ItemController.addItem()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
